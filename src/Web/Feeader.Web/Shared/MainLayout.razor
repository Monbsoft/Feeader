@inherits LayoutComponentBase
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudChip Href="/" Icon="@Icons.Filled.Newspaper" Label="true" Color="Color.Info" Edge="Edge.Start">
           <MudText Typo="Typo.h5" Class="m1-3">Feeader</MudText>
         </MudChip>      
        <MudSpacer />
        <MudMenu>
            <ActivatorContent>
                <MudAvatar Color="Color.Secondary" Variant="Variant.Outlined">
                    <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" />
                </MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem Href="/settings/categories">Categories</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
        </ChildContent>        
        </MudMenu>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme Theme = new MudTheme();
}